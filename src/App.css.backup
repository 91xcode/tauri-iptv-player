* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

body {
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen',
    'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans', 'Helvetica Neue',
    sans-serif;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

.app-container {
  display: flex;
  height: 100vh;
  background: #1a1a1a;
  color: #ffffff;
}

.sidebar {
  width: 280px;
  background: #2a2a2a;
  border-right: 1px solid #3a3a3a;
  display: flex;
  flex-direction: column;
}

.sidebar-header {
  padding: 20px;
  border-bottom: 1px solid #3a3a3a;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.sidebar-header h2 {
  font-size: 18px;
  font-weight: 600;
}

.add-btn {
  background: #007aff;
  border: none;
  border-radius: 6px;
  width: 32px;
  height: 32px;
  cursor: pointer;
  font-size: 16px;
  transition: background 0.2s;
}

.add-btn:hover {
  background: #0051d5;
}

.source-list {
  flex: 1;
  overflow-y: auto;
  padding: 10px;
}

.source-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 12px;
  margin-bottom: 8px;
  background: #333;
  border-radius: 8px;
  cursor: pointer;
  transition: background 0.2s;
}

.source-item:hover {
  background: #3a3a3a;
}

.source-item.active {
  background: #007aff;
}

.source-name {
  flex: 1;
  font-size: 14px;
}

.channel-count {
  margin-left: 8px;
  opacity: 0.7;
  font-size: 12px;
}

.delete-btn {
  background: transparent;
  border: none;
  cursor: pointer;
  font-size: 16px;
  opacity: 0.6;
  transition: opacity 0.2s;
  padding: 4px 8px;
}

.delete-btn:hover {
  opacity: 1;
}

.empty-state {
  padding: 40px 20px;
  text-align: center;
}

.empty-state p {
  margin-bottom: 20px;
  opacity: 0.7;
}

.primary-btn {
  background: #007aff;
  color: white;
  border: none;
  border-radius: 8px;
  padding: 12px 24px;
  font-size: 14px;
  cursor: pointer;
  transition: background 0.2s;
}

.primary-btn:hover {
  background: #0051d5;
}

.main-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.channel-panel {
  height: 200px;
  border-bottom: 1px solid #3a3a3a;
  padding: 20px;
  overflow-y: auto;
}

.channel-panel h3 {
  font-size: 16px;
  font-weight: 600;
  margin-bottom: 15px;
}

.player-panel {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #000;
}

.player-placeholder {
  text-align: center;
  opacity: 0.5;
  font-size: 18px;
}

.channel-list {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
  gap: 10px;
}

.channel-item {
  background: #2a2a2a;
  border: 2px solid transparent;
  border-radius: 8px;
  padding: 12px;
  cursor: pointer;
  transition: all 0.2s;
  text-align: center;
}

.channel-item:hover {
  background: #333;
  border-color: #555;
}

.channel-item.active {
  border-color: #007aff;
  background: #1a3a5a;
}

.channel-logo {
  width: 40px;
  height: 40px;
  margin: 0 auto 8px;
  border-radius: 4px;
  background: #3a3a3a;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20px;
}

.channel-logo img {
  width: 100%;
  height: 100%;
  object-fit: contain;
  border-radius: 4px;
}

.channel-name {
  font-size: 13px;
  word-break: break-word;
}

.channel-group {
  font-size: 11px;
  opacity: 0.6;
  margin-top: 4px;
}

.video-player {
  width: 100%;
  height: 100%;
  position: relative;
}

.video-player video {
  width: 100%;
  height: 100%;
  background: #000;
}

.video-error {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  text-align: center;
  color: #ff4444;
}

.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.7);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal {
  background: #2a2a2a;
  border-radius: 12px;
  padding: 24px;
  width: 90%;
  max-width: 500px;
}

.modal h2 {
  font-size: 20px;
  margin-bottom: 20px;
}

.form-group {
  margin-bottom: 16px;
}

.form-group label {
  display: block;
  margin-bottom: 8px;
  font-size: 14px;
}

.form-group input {
  width: 100%;
  padding: 10px 12px;
  background: #1a1a1a;
  border: 1px solid #3a3a3a;
  border-radius: 6px;
  color: #ffffff;
  font-size: 14px;
}

.form-group input:focus {
  outline: none;
  border-color: #007aff;
}

.modal-actions {
  display: flex;
  gap: 12px;
  justify-content: flex-end;
  margin-top: 24px;
}

.secondary-btn {
  background: transparent;
  color: #ffffff;
  border: 1px solid #3a3a3a;
  border-radius: 8px;
  padding: 10px 20px;
  font-size: 14px;
  cursor: pointer;
  transition: all 0.2s;
}

.secondary-btn:hover {
  background: #3a3a3a;
}